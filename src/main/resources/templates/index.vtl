<h1>Top Ten List</h1>

#if ($persons.size() > 0)
<ul>
  #foreach($person in $persons)
    <li><a href="/person/$person.getId()">$person.getName()</a></li>
  #end
</ul>
#else
<h2>There are no pre-existing users!</h2>
#end

<br><br>

<h3>Create New User</h3>
<form action="/movie-form" method="post">
  <label for="user-name">What is your name?</label>
  <input id="user-name" name="user-name" class="form-control" type="text">
  <button type="submit" class="btn btn-danger">Submit</button>
</form>
